# रामा Backend Environment Variables
# Copy this file to .env and update with your production values

# Database Configuration
MONGO_URL="mongodb://localhost:27017"
DB_NAME="raama_production"

# Security
JWT_SECRET="change-this-to-a-secure-random-string-min-32-characters"

# CORS Origins - Choose one option:
# Option 1: Development (allows all origins - NOT for production)
CORS_ORIGINS="*"

# Option 2: Local development with specific ports
# CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Option 3: Production (replace with your actual domains)
# CORS_ORIGINS="https://yourdomain.com,https://admin.yourdomain.com"

# Email Configuration (Choose one option)

# Option 1: EmailJS (Recommended - easier setup)
EMAILJS_SERVICE_ID="your_emailjs_service_id"
EMAILJS_TEMPLATE_ID="your_emailjs_template_id"
EMAILJS_PUBLIC_KEY="your_emailjs_public_key"
EMAILJS_PRIVATE_KEY="your_emailjs_private_key"

# Option 2: SMTP (Traditional email server)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Common email settings
FROM_EMAIL="noreply@yourdomain.com"
FRONTEND_URL="https://yourdomain.com"

# AI Configuration (Optional - for translation features)
GEMINI_API_KEY="your-gemini-api-key-here"
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"